---
import Layout from '../layouts/Layout.astro';
import PhotoSlider from '../components/PhotoSlider.astro';
import { getTranslations, type Language } from '../i18n/utils';

// English page
const currentLang: Language = 'en';
const t = getTranslations(currentLang);

const salonImages = [
  {
    src: 'https://images.unsplash.com/photo-1560066984-138dadb4c035?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
    alt: 'Modern salon interior',
    caption: 'Our modern and stylish salon interior'
  },
  {
    src: 'https://images.unsplash.com/photo-1562322140-8baeececf3df?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
    alt: 'Professional hair styling',
    caption: 'Expert hair styling and coloring'
  },
  {
    src: 'https://images.unsplash.com/photo-1521590832167-7bcbfaa6381f?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
    alt: 'Hair cutting process',
    caption: 'Precision cuts by our skilled stylists'
  },
  {
    src: 'https://images.unsplash.com/photo-1595476108010-b4d1f102b1b1?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
    alt: 'Salon equipment',
    caption: 'State-of-the-art salon equipment'
  }
];
---

<Layout title="tête en l'air - Premium Hair Salon" description="Professional hair styling, cutting, and coloring services in a modern salon" lang={currentLang}>
  <main class="min-h-screen">
    <!-- Hero Section -->
    <section id="home" class="min-h-screen relative overflow-hidden flex items-center justify-center">
      <!-- Background Image -->
      <div class="absolute inset-0 z-0">
        <img 
          src="src/assets/images/hero-image.jpg"
          alt="tête en l'air Bus Salon"
          class="w-full h-full object-cover"
        />
        <!-- Overlay for text readability -->
        <div class="absolute inset-0 bg-gradient-to-r from-black/60 via-black/40 to-transparent"></div>
      </div>
      
      <!-- Content -->
      <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center fade-up">
        <h1 class="text-8xl md:text-9xl font-brand mb-8 text-reveal" style="color: var(--cream-white); text-shadow: 2px 2px 8px rgba(0,0,0,0.7);">
          tête en l'air
        </h1>
        <div class="accent-line"></div>
        <p class="text-xl md:text-2xl font-body mb-12 max-w-2xl mx-auto" style="color: var(--cream-white); text-shadow: 1px 1px 4px rgba(0,0,0,0.8);">
          {t.hero.subtitle}
        </p>
        <div class="flex flex-col sm:flex-row gap-6 justify-center">
          <a href="#contact" class="btn-primary font-nav magnetic">
            <span style="position: relative; z-index: 10;">{t.hero.cta_primary}</span>
          </a>
          <a href="#salon" class="font-nav px-8 py-3 rounded transition-all border-2 hover:transform hover:translateY(-2px)" style="color: var(--cream-white); border-color: var(--cream-white); hover:background: var(--cream-white); hover:color: var(--navy-blue); text-shadow: 1px 1px 2px rgba(0,0,0,0.5);">
            {t.hero.cta_secondary}
          </a>
        </div>
      </div>
    </section>

    <!-- Salon Gallery Section -->
    <section id="salon" class="py-32 relative">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-20 items-center">
          <div class="fade-up">
            <h2 class="text-6xl font-heading mb-8">
              {t.salon.title}
              <span class="font-accent block">{t.salon.title_accent}</span>
            </h2>
            <div class="accent-line" style="margin: 2rem 0;"></div>
            <p class="font-body text-xl mb-8 leading-relaxed">
              {t.salon.subtitle}
            </p>
            <p class="font-body mb-8 leading-relaxed">
              {t.salon.description}
            </p>
          </div>
          <div class="glass-card p-0 overflow-hidden">
            <PhotoSlider images={salonImages} />
          </div>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section class="py-32 relative" style="background: var(--warm-white);">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-20">
          <h2 class="text-6xl font-heading mb-8">
            {t.about.title}
          </h2>
          <div class="accent-line"></div>
        </div>
        <div class="grid md:grid-cols-2 gap-16">
          <div class="minimal-card">
            <h3 class="text-3xl font-heading mb-6">{t.about.card1.title}</h3>
            <p class="font-body leading-relaxed">
              {t.about.card1.description}
            </p>
          </div>
          <div class="minimal-card">
            <h3 class="text-3xl font-heading mb-6">{t.about.card2.title}</h3>
            <p class="font-body leading-relaxed">
              {t.about.card2.description}
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Services/Pricing Section -->
    <section id="pricing" class="py-32 relative">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-20">
          <h2 class="text-6xl font-heading mb-8">
            {t.services.title}
          </h2>
          <div class="accent-line"></div>
        </div>
        
        <div class="grid md:grid-cols-3 gap-0">
          <div class="glass-card p-12 text-center group">
            <h3 class="text-2xl font-heading mb-6">{t.services.cut.title}</h3>
            <p class="font-body mb-8 opacity-70">
              {t.services.cut.description}
            </p>
            <div class="font-price">{t.services.cut.price}</div>
          </div>
          <div class="glass-card p-12 text-center group">
            <h3 class="text-2xl font-heading mb-6">{t.services.color.title}</h3>
            <p class="font-body mb-8 opacity-70">
              {t.services.color.description}
            </p>
            <div class="font-price">{t.services.color.price}</div>
          </div>
          <div class="glass-card p-12 text-center group">
            <h3 class="text-2xl font-heading mb-6">{t.services.style.title}</h3>
            <p class="font-body mb-8 opacity-70">
              {t.services.style.description}
            </p>
            <div class="font-price">{t.services.style.price}</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-32 relative" style="background: var(--navy-blue); color: var(--cream-white);">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-20">
          <h2 class="text-6xl font-heading mb-8" style="color: var(--cream-white);">
            {t.contact.title}
          </h2>
          <div class="accent-line"></div>
        </div>
        
        <div class="grid lg:grid-cols-2 gap-20">
          <div>
            <h3 class="text-2xl font-heading mb-8" style="color: var(--light-powder);">{t.contact.reach_us}</h3>
            <div class="space-y-6 font-body text-lg" style="color: var(--powder-blue);">
              <div class="flex items-center space-x-4">
                <span class="w-8 h-8 rounded-full flex items-center justify-center text-sm font-nav" style="background: var(--warm-coral); color: black;">▲</span>
                <span>{t.contact.address}</span>
              </div>
              <div class="flex items-center space-x-4">
                <span class="w-8 h-8 rounded-full flex items-center justify-center text-sm font-nav" style="background: var(--warm-coral); color: black;">●</span>
                <span>{t.contact.phone}</span>
              </div>
              <div class="flex items-center space-x-4">
                <span class="w-8 h-8 rounded-full flex items-center justify-center text-sm font-nav" style="background: var(--warm-coral); color: black;">■</span>
                <span>{t.contact.email}</span>
              </div>
            </div>
          </div>
          
          <div>
            <h3 class="text-2xl font-heading mb-8" style="color: var(--light-powder);">{t.contact.hours_title}</h3>
            <div class="space-y-4 font-body text-lg">
              <div class="flex justify-between pb-2" style="border-bottom: 1px solid var(--powder-blue);">
                <span style="color: var(--powder-blue);">{t.contact.hours.weekdays}</span>
                <span style="color: var(--cream-white);">{t.contact.hours.weekdays_time}</span>
              </div>
              <div class="flex justify-between pb-2" style="border-bottom: 1px solid var(--powder-blue);">
                <span style="color: var(--powder-blue);">{t.contact.hours.saturday}</span>
                <span style="color: var(--powder-blue);">{t.contact.hours.saturday_time}</span>
              </div>
            </div>
            
            <div class="mt-12">
              <a href="tel:+41123456789" class="font-nav magnetic inline-block px-8 py-3 rounded transition-all" style="background: var(--warm-coral); color: var(--cream-white); hover:transform: translateY(-2px);">
                <span style="position: relative; z-index: 10;">{t.contact.cta}</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="py-12 border-t" style="background: var(--cream-white); border-color: var(--powder-blue);">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="mb-8">
          <h3 class="text-3xl font-brand mb-4">tête en l'air</h3>
          <div class="accent-line" style="width: 40px;"></div>
        </div>
        
        <p class="font-body text-sm" style="color: var(--text-muted); opacity: 0.8;">
          {t.footer.copyright}
        </p>
      </div>
    </footer>
  </main>
</Layout>