---
import Layout from '../../layouts/Layout.astro';
import PhosphorIcon from '../../components/PhosphorIcon.astro';
import { getTranslations, type Language } from '../../i18n/utils';
import heroImage from '../../assets/images/gallery/celine-1.jpg';

const currentLang: Language = 'en';
const t = getTranslations(currentLang);
---

<Layout title="About - tête en l'air" description="Celine Winterberger - Your hairstylist in Basel" lang={currentLang}>
  <style>
    body {
      background: white !important;
    }
  </style>
  <main class="min-h-screen">
    <!-- Hero Section -->
    <section class="h-96 md:h-[500px] relative overflow-hidden flex items-center justify-center" style="clip-path: polygon(0 0, 100% 0, 100% 85%, 0 100%); filter: drop-shadow(0 8px 16px rgba(0, 0, 0, 0.3));">
      <!-- Background Image -->
      <div class="absolute inset-0 z-0">
        <img
          src={heroImage.src}
          alt="Celine Winterberger - tête en l'air"
          class="w-full h-full object-cover"
          style="filter: brightness(1.3) contrast(0.9);"
        />
        <!-- White overlay for better readability -->
        <div class="absolute inset-0 bg-white opacity-15"></div>
      </div>

    </section>
    <!-- About Section -->
    <section class="py-32 relative" style="background: white;">
      <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <!-- Introduction Block -->
        <div class="mb-16">
          <p class="font-body text-lg leading-relaxed text-center">
            {t.about.intro}
          </p>
        </div>

        <!-- Experience Block -->
        <div class="mb-16">
          <p class="font-body text-lg leading-relaxed text-center">
            {t.about.experience}
          </p>
        </div>

        <!-- Specializations Block -->
        <div class="mb-16">
          <p class="font-body text-lg leading-relaxed text-center">
            {t.about.expertise}
          </p>
        </div>

        <!-- Basel Experience Block -->
        <div class="mb-16">
          <p class="font-body text-lg leading-relaxed text-center">
            {t.about.basel_story}
          </p>
        </div>

        <!-- Salon Description Block -->
        <div class="mb-16">
          <p class="font-body text-lg leading-relaxed text-center">
            {t.about.salon_description}
          </p>
        </div>

        <!-- Languages Block -->
        <div class="mb-16">
          <p class="font-body text-lg leading-relaxed text-center">
            {t.about.languages}
          </p>
        </div>
      </div>
    </section>
  </main>
</Layout>