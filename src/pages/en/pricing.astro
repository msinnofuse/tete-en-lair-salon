---
import Layout from '../../layouts/Layout.astro';
import PhosphorIcon from '../../components/PhosphorIcon.astro';
import { getTranslations, type Language } from '../../i18n/utils';
import heroImage from '../../assets/images/gallery/smurf.jpg';

const currentLang: Language = 'en';
const t = getTranslations(currentLang);
---

<Layout title="Pricing - tÃªte en l'air" description="Our prices and services" lang={currentLang}>
  <style>
    body {
      background: white !important;
    }
  </style>
  <main class="min-h-screen">
    <!-- Hero Section -->
    <section class="min-h-screen relative overflow-hidden flex items-center justify-center" style="clip-path: polygon(0 0, 100% 0, 100% 85%, 0 100%); filter: drop-shadow(0 8px 16px rgba(0, 0, 0, 0.3));">
      <!-- Background Image -->
      <div class="absolute inset-0 z-0">
        <img
          src={heroImage.src}
          alt="Creative hair coloring"
          class="w-full h-full object-cover"
          style="object-position: center bottom; filter: brightness(1.3) contrast(0.9);"
        />
        <!-- White overlay for better readability -->
        <div class="absolute inset-0 bg-white opacity-15"></div>
      </div>

    </section>

    <!-- Services/Pricing Section -->
    <section class="py-32 relative">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">

        <!-- Services - Centered Minimalist -->
        <div class="text-center space-y-16">

          <div>
            <h3 class="text-2xl font-heading mb-6">{t.services.wash_cut_dry.title}</h3>
            <div class="font-body leading-relaxed whitespace-pre-line" set:html={t.services.wash_cut_dry.description.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')}>
            </div>
          </div>

          <div>
            <h3 class="text-2xl font-heading mb-6">{t.services.wash_style.title}</h3>
            <div class="font-body leading-relaxed whitespace-pre-line" set:html={t.services.wash_style.description.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')}>
            </div>
          </div>

          <div>
            <h3 class="text-2xl font-heading mb-6">{t.services.color_toning.title}</h3>
            <div class="font-body leading-relaxed whitespace-pre-line" set:html={t.services.color_toning.description.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')}>
            </div>
          </div>

          <div>
            <h3 class="text-2xl font-heading mb-6">{t.services.highlights_balayage.title}</h3>
            <div class="font-body leading-relaxed whitespace-pre-line" set:html={t.services.highlights_balayage.description.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')}>
            </div>
          </div>

        </div>

        <!-- Important Information - Less Prominent -->
        <div class="mt-24 text-center">
          <div class="divider-thin"></div>
          <h3 class="text-lg font-heading mb-8 opacity-80">Important Information</h3>
          <div class="space-y-6 max-w-2xl mx-auto">
            <p class="font-body text-sm opacity-70">{t.services.policies.payment}</p>
            <p class="font-body text-sm opacity-70">{t.services.policies.youth_discount}</p>
            <p class="font-body text-sm opacity-70">{t.services.policies.student_discount}</p>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>