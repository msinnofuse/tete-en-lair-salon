---
import Layout from '../layouts/Layout.astro';
import { getTranslations, type Language } from '../i18n/utils';
import heroImage from '../assets/images/hero-images/celine-2.jpg';

const currentLang: Language = 'de';
const t = getTranslations(currentLang);
---

<Layout title={t.seo.about.title} description={t.seo.about.description} lang={currentLang}>
  <style>
    body {
      background: white !important;
    }
  </style>
  <main class="min-h-screen">
    <!-- Hero Section -->
    <section class="h-96 md:h-[500px] relative overflow-hidden flex items-center justify-center" style="clip-path: polygon(0 0, 100% 0, 100% 85%, 0 100%); filter: drop-shadow(0 8px 16px rgba(0, 0, 0, 0.3));">
      <!-- Background Image -->
      <div class="absolute inset-0 z-0">
        <img
          src={heroImage.src}
          alt="Celine Wintenberger - tête en l'air"
          class="w-full h-full object-cover"
          style="filter: brightness(1.0) contrast(1.0);"
        />
        <!-- Light gradient overlay for black navigation readability -->
        <div class="absolute inset-0" style="background: linear-gradient(180deg, rgba(255,255,255,0.4) 0%, rgba(255,255,255,0.15) 120px, transparent 250px);"></div>
      </div>

    </section>
    <!-- About Section -->
    <section class="py-32 relative" style="background: white;">
      <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">

        <!-- Introduction Block -->
        <div class="mb-16">
          <p class="font-body text-lg leading-relaxed text-center">
            {t.about.intro}
          </p>
        </div>

        <!-- Experience Block -->
        <div class="mb-16">
          <p class="font-body text-lg leading-relaxed text-center">
            {t.about.experience}
          </p>
        </div>

        <!-- Specializations Block -->
        <div class="mb-16">
          <p class="font-body text-lg leading-relaxed text-center">
            {t.about.expertise}
          </p>
        </div>

        <!-- Basel Experience Block -->
        <div class="mb-16">
          <p class="font-body text-lg leading-relaxed text-center">
            {t.about.basel_story}
          </p>
        </div>

        <!-- Salon Description Block -->
        <div class="mb-16">
          <p class="font-body text-lg leading-relaxed text-center">
            {t.about.salon_description}
          </p>
        </div>

        <!-- Languages Block -->
        <div class="mb-16">
          <p class="font-body text-lg leading-relaxed text-center">
            {t.about.languages}
          </p>
        </div>

        <!-- Name Signature -->
        <div class="mt-16 text-center">
          <p class="font-heading text-xl opacity-70">
            Céline Wintenberger
          </p>
        </div>

        <!-- Press Section -->
        <div class="mt-24 pt-16 border-t border-gray-200">
          <h3 class="text-lg font-heading mb-12 text-center opacity-80">In der Presse</h3>
          <div class="space-y-8 max-w-2xl mx-auto">
            <div class="text-center">
              <a href="https://www.schwarzwaelder-bote.de/inhalt.kunst-und-gewerbe-am-rheinhafen-haareschneiden-im-flughafenbus.e1c254d4-8ef6-4ee9-94e6-eaa7f90c7278.html"
                 target="_blank"
                 rel="noopener noreferrer"
                 class="inline-block group">
                <div class="font-body text-base">
                  <span class="font-medium">Schwarzwälder Bote</span>
                  <span class="text-sm opacity-60 ml-2">2021</span>
                </div>
                <div class="text-sm opacity-70 mt-1 italic group-hover:opacity-100 transition-opacity">
                  "Haareschneiden im Flughafenbus"
                </div>
              </a>
            </div>
            <div class="text-center">
              <a href="https://www.bazonline.ch/sie-machte-einen-euro-airport-bus-zum-eigenen-coiffeursalon-784581548774"
                 target="_blank"
                 rel="noopener noreferrer"
                 class="inline-block group">
                <div class="font-body text-base">
                  <span class="font-medium">Basler Zeitung</span>
                  <span class="text-sm opacity-60 ml-2">2020</span>
                </div>
                <div class="text-sm opacity-70 mt-1 italic group-hover:opacity-100 transition-opacity">
                  "Sie machte einen Euro-Airport-Bus zum eigenen Coiffeursalon"
                </div>
              </a>
            </div>
            <div class="text-center">
              <a href="https://www.bzbasel.ch/basel/basel-stadt/haareschneiden-in-einem-flughafen-shuttlebus-im-basler-hafen-ist-das-neu-moglich-ld.1278977"
                 target="_blank"
                 rel="noopener noreferrer"
                 class="inline-block group">
                <div class="font-body text-base">
                  <span class="font-medium">bz Basel</span>
                  <span class="text-sm opacity-60 ml-2">2020</span>
                </div>
                <div class="text-sm opacity-70 mt-1 italic group-hover:opacity-100 transition-opacity">
                  "Haareschneiden in einem Flughafen-Shuttlebus"
                </div>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>